	.base-edit {

		textarea.memo-edit-area {
			border-bottom: 1px solid #c8c8c8;
		}

		&.base-edit-focus {
			box-shadow: none;

			textarea.memo-edit-area {
				outline: none;
				border-color: #56b4ef;
